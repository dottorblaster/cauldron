<component type="desktop-application">
  <id>@app-id@</id>
  <metadata_license>CC0</metadata_license>
  <!-- Insert your license of choice here -->
  <project_license>Apache-2.0</project_license>
  <name>Cauldron</name>
  <summary>Collect content from the web</summary>
  <description>
    <p>Cauldron lets you access and use Instapaper, an online service for storing web bookmarks. Save anything that piques your interest, and get back to it when you have time.</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/dottorblaster/cauldron/refs/heads/master/data/resources/screenshots/main_window.png</image>
      <caption>Main window</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/dottorblaster/cauldron/refs/heads/master/data/resources/screenshots/dark_mode.png</image>
      <caption>Dark mode</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/dottorblaster/cauldron/refs/heads/master/data/resources/screenshots/filtered_view.png</image>
      <caption>Filtered view</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/dottorblaster/cauldron/refs/heads/master/data/resources/screenshots/add_bookmark.png</image>
      <caption>Add bookmarks directly from the app</caption>
    </screenshot>
  </screenshots>
  <url type="homepage">https://github.com/dottorblaster/cauldron</url>
  <url type="bugtracker">https://github.com/dottorblaster/cauldron/issues</url>
  <url type="vcs-browser">https://github.com/dottorblaster/cauldron</url>
  <url type="contribute">https://github.com/dottorblaster/cauldron?tab=readme-ov-file#building-the-project</url>
  <url type="translate">https://github.com/dottorblaster/cauldron/tree/master/po</url>
  <content_rating type="oars-1.1" />
  <releases>
    <release version="0.9.2" date="2026-01-05">
      <description translatable="no">
        <p>This release includes minor improvements and refinements.</p>
      </description>
    </release>
    <release version="0.9.1" date="2026-01-04">
      <description translatable="no">
        <p>This release includes minor improvements and refinements.</p>
      </description>
    </release>
    <release version="0.9.0" date="2026-01-04">
      <description translatable="no">
        <p>This release includes new features and improvements:</p>
        <ul>
          <li>Article list filtering to easily find and organize your saved content</li>
          <li>Proper dark mode support with improved theming and visual consistency</li>
        </ul>
      </description>
    </release>
    <release version="0.8.0" date="2026-01-03">
      <description translatable="no">
        <p>This release includes new features and improvements:</p>
        <ul>
          <li>Add new articles directly from the app</li>
          <li>Display article metadata (author, word count, reading time) in both sidebar and article view</li>
          <li>Updated to Relm4 0.10.1 and latest flume version for improved stability</li>
          <li>Comprehensive test coverage with GTK and Relm4 UI testing framework</li>
          <li>Continuous integration with automated testing</li>
        </ul>
      </description>
    </release>
    <release version="0.7.1" date="2026-01-01">
      <description translatable="no">
        <p>This release includes new features and improvements:</p>
        <ul>
          <li>Native article view for reading content directly in the app</li>
          <li>Articles now persist across app restarts</li>
          <li>Automatically scroll to top when rendering a new article</li>
          <li>Updated dependencies (open, tracing, tracing-subscriber) for improved performance</li>
        </ul>
      </description>
    </release>
    <release version="0.6.0" date="2025-12-29">
      <description translatable="no">
        <p>This release includes major changes and improvements:</p>
        <ul>
          <li>Migration from Pocket to Instapaper as the backend service</li>
          <li>Upgraded to GNOME 49 runtime and LLVM 20</li>
          <li>Updated multiple dependencies (serde, serde_json, url, gettext-rs, reqwest) for improved security and performance</li>
        </ul>
      </description>
    </release>
    <release version="0.5.0" date="2025-03-16">
      <description translatable="no">
        <p>This release includes the possibility to copy the articles' URL to the clipboard and opening them in the browser. Enjoy!</p>
      </description>
    </release>
  </releases>
  <!-- developer_name tag deprecated with Appstream 1.0 -->
  <developer_name translatable="no">Alessio Biancalana</developer_name>
  <!-- Introduced with Appstream 1.0, but not yet fully supported by corresponding projects -->
  <developer id="gnome.org">
    <name translatable="no">Alessio Biancalana</name>
  </developer>
  <update_contact>alessio@dottorblaster.it</update_contact>
  <translation type="gettext">@gettext-package@</translation>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
  <branding>
    <color type="primary" scheme_preference="light">#7dd9d6</color>
    <color type="primary" scheme_preference="dark">#b19cd9</color>
  </branding>
  <supports>
    <control>keyboard</control>
    <control>touch</control>
    <control>pointing</control>
  </supports>
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
</component>
